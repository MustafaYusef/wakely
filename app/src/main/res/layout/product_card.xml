<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:layoutDirection="ltr"
        android:background="@drawable/round_section"
        android:orientation="horizontal"
        android:weightSum="1">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/priceProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round_price"
                android:fontFamily="@font/font_bold"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="2222$"
                android:textColor="@color/white"
                android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="5dp">

        <TextView
                android:id="@+id/prodTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/font_bold"

                android:gravity="center|right"
                android:text="اسم المحل"
                android:textColor="@color/colorAccent"

                android:textSize="20sp" />

        <TextView
                android:id="@+id/descProd"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:fontFamily="@font/font_regular"
                android:gravity="center|right"
                android:text="الوصف"

                android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@color/grayLight"
                app:cardCornerRadius="15dp">
        <ImageView
                android:id="@+id/circleImageViewProd"
                android:layout_width="90dp"
                android:layout_height="80dp"
           />
       </androidx.cardview.widget.CardView>
        <!--        <ImageView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="96dp"-->
        <!--                android:scaleType="centerInside"-->
        <!--                android:src="@drawable/elips" />-->
    </LinearLayout>
</LinearLayout>