<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.auth.Delegate.FormOne.RegesterShops">
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center">

        <ImageView
                android:layout_width="184dp"
                android:layout_height="83dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/wakel_title" />
        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/nameReg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_person_gray_24dp"
                android:drawablePadding="5dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/font_regular"
                android:gravity="right|center"
                android:hint="الأسم الكامل لصاحب المحل"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />
        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phoneReg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:drawableRight="@drawable/ic_call_black_24dp"
                android:drawablePadding="5dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/font_regular"
                android:gravity="right|center"
                android:hint="رقم الهاتف"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/passReg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/font_regular"
                android:gravity="right|center"
                android:hint="كلمة المرور"
                android:backgroundTint="@color/white"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginBtnReges"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/font_bold"
                android:text="تسجيل"
                android:textColor="@color/white"
                android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
</FrameLayout>