<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:layoutDirection="ltr"
        android:background="@drawable/round_section"
        android:orientation="horizontal"
        android:weightSum="1">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/priceOrderCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/round_price"
                android:fontFamily="@font/font_bold"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="2222$"
                android:textColor="@color/white"
                android:textSize="24sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
             >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_24dp"/>
       <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/dayNum"
               android:textSize="14sp"
               android:fontFamily="@font/font_bold"
               android:layout_marginLeft="5dp"
               android:text="قبل 2 يوم"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:paddingRight="5dp">
        <TextView
                android:id="@+id/orderQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/font_bold"
                android:gravity="center|right"
                android:text="5"
                android:textSize="20sp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/font_bold"

                android:gravity="center|right"
                android:text="الكمية : "
                android:textColor="@color/colorAccent"

                android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:gravity="center">


        <ImageButton
                android:id="@+id/goToCart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_btn_border_white"
                android:fontFamily="@font/font_bold"
                android:src="@drawable/ic_assignment_white_24dp"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>